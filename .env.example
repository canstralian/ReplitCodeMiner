
# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ======================
# Required Configuration
# ======================

# Replit OAuth Credentials
# Get these from https://replit.com/account/api
REPLIT_CLIENT_ID=your_replit_client_id_here
REPLIT_CLIENT_SECRET=your_replit_client_secret_here

# Security Secrets
# Generate strong, random values for these
JWT_SECRET=your_jwt_secret_256_bits_long
SESSION_SECRET=your_session_secret_here

# Database Configuration
# Replit provides this automatically, or use your own PostgreSQL URL
DATABASE_URL=postgresql://username:password@host:port/database

# ======================
# Optional Configuration
# ======================

# ======================
# AI Provider Configuration
# ======================

# Default AI provider to use (openai, claude, codepal, cohere, google, groq)
AI_DEFAULT_PROVIDER=openai

# OpenAI Configuration
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
# OPENAI_BASE_URL=https://api.openai.com/v1

# Claude (Anthropic) Configuration
# Get from https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000
# CLAUDE_BASE_URL=https://api.anthropic.com

# CodePal.ai Configuration
# Get from https://codepal.ai/account/api
CODEPAL_API_KEY=your-codepal-api-key-here
CODEPAL_MODEL=codepal-pro
CODEPAL_MAX_TOKENS=2000
# CODEPAL_BASE_URL=https://api.codepal.ai/v1

# Cohere Configuration
# Get from https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-r-plus
COHERE_MAX_TOKENS=2000
# COHERE_BASE_URL=https://api.cohere.ai/v1

# Google AI (Gemini) Configuration
# Get from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-1.5-pro
GOOGLE_AI_MAX_TOKENS=2000
# GOOGLE_AI_BASE_URL=https://generativelanguage.googleapis.com/v1

# Groq Configuration
# Get from https://console.groq.com/keys
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=llama3-70b-8192
GROQ_MAX_TOKENS=2000
# GROQ_BASE_URL=https://api.groq.com/openai/v1

# Application Settings
NODE_ENV=development
PORT=5000
DEBUG=true
LOG_LEVEL=debug

# CORS Configuration
# Set to your frontend domain in production
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_TIMEOUT=3600000

# ======================
# Production Settings
# ======================

# For production deployment, use these settings:
# NODE_ENV=production
# PORT=5000
# DEBUG=false
# LOG_LEVEL=info
# CORS_ORIGIN=https://your-frontend-domain.com

# ======================
# Development Settings
# ======================

# API Base URLs (usually auto-detected)
# REPLIT_API_BASE=https://replit.com/graphql
# FRONTEND_URL=http://localhost:5173
# BACKEND_URL=http://localhost:5000

# Cache Settings
# CACHE_TTL=300000
# MAX_CACHE_SIZE=100

# ======================
# Security Settings
# ======================

# Additional security configurations
# BCRYPT_ROUNDS=12
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_TIME=900000

# Content Security Policy
# CSP_REPORT_URI=https://your-domain.com/csp-report

# ======================
# Monitoring & Analytics
# ======================

# Application monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_analytics_id_here

# Performance monitoring
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
# NEW_RELIC_APP_NAME=replit-code-analysis

# ======================
# Email Configuration
# ======================

# For sending notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@your-domain.com

# ======================
# Storage Configuration
# ======================

# File upload limits
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Cloud storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket-name

# ======================
# Third-Party Integrations
# ======================

# GitHub integration (optional)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Slack integration (optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url
# SLACK_CHANNEL=#code-analysis

# ======================
# Feature Flags
# ======================

# Enable/disable features
# ENABLE_AI_ANALYSIS=true
# ENABLE_CACHING=true
# ENABLE_RATE_LIMITING=true
# ENABLE_ANALYTICS=true

# ======================
# Development Tools
# ======================

# Hot reload and development tools
# WEBPACK_DEV_SERVER=true
# REACT_REFRESH=true
# TYPESCRIPT_CHECK=true

# ======================
# Testing Configuration
# ======================

# Test database (for running tests)
# TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# Test environment settings
# TEST_JWT_SECRET=test_jwt_secret
# TEST_SESSION_SECRET=test_session_secret

# ======================
# Notes
# ======================

# 1. Never commit actual secrets to version control
# 2. Use strong, unique passwords for all secrets
# 3. Rotate secrets regularly
# 4. Use environment-specific values for each deployment
# 5. Validate all environment variables on startup

# For Replit deployment:
# - Add these variables in the Secrets tab
# - Some values (like DATABASE_URL) are auto-provided
# - Ensure all required variables are set before deployment

# For local development:
# - Copy this file to .env
# - Fill in your actual values
# - Never commit .env to version control

# Security reminder:
# - Use different secrets for development and production
# - Store production secrets securely
# - Limit access to environment variables
# - Monitor for secret leaks in logs
